#!/usr/bin/env python
import sys
import time
import argparse
from rec.lengths import Find_Lengths

if __name__ == '__main__':
    if not sys.stdin.isatty():
        f = sys.stdin
        count = 10
        if '-c' in sys.argv or '--count' in sys.argv:
            try:count = sys.argv[sys.argv.index('-c') + 1]
            except:pass
            try:count = sys.argv[sys.argv.index('--count') +1]
            except:pass
    else:
        parse = argparse.ArgumentParser()
        parse.add_argument('file', help="password file")
        parse.add_argument('-c', '--count', default=10, help="# of lengths to print")
        args = parse.parse_args()
        f = open(args.file, 'r')
        count = args.count
    c = Find_Lengths()
    start = time.time()
    c.parse_list(f)
    c.print_data(int(count))
    print '\n%s' % (time.time() - start)
